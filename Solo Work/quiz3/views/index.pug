html
  head
    title Student Grades Report
    link(rel='stylesheet', href='/style.css', type='text/css')
  body
    div.center
      h1 Student Grades Report App
      h2 Input your student's final grade percentage (%):
      form(action="/" method="post" id="studentForm" class='row')
        div
            input(type="text" name="name" placeholder="Student Name")
        div
            input(type="number" name="percent" placeholder="Student Percent")
        div
            button(type="submit") Save Student
                  
      if errors
        p= errors

    div
      hr
      each val in studentArray
        article.row-around
          p
            strong= "Student ID: "
            span= val.url
          p
            strong= "Name: "
            span= val.studentName
          p
            strong= "Student Percent: "
            span= val.studentPercent
          p
            strong= "Letter Grade: "
            span= val.studentLetterGrade
          p
            a(href="/delete/" + val.url) Delete
          p
            a(href="/edit/" + val.url) Edit
        hr